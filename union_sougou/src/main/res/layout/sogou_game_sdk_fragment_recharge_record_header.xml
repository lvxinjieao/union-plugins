<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--header部分的view-->
    <LinearLayout
        android:id="@+id/sogou_game_sdk_recharge_user_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/sogou_game_sdk_recharge_record_game_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:textColor="@color/sogou_game_sdk_color_111111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sogou_game_sdk_recharge_record_sdou_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_game_name_tv"
            android:ellipsize="end"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:textColor="@color/sogou_game_sdk_color_888888"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_recharge_user_name">

        <RelativeLayout
            android:id="@+id/sogou_game_sdk_time_landscape"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sogou_game_sdk_recharge_record_start_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:text="开始时间"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_recharge_record_start_time_tv"
                android:layout_width="138dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_start_time_tip"
                android:background="@drawable/sogou_game_sdk_input_bg"
                android:clickable="true"
                android:gravity="center_horizontal|center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_recharge_record_end_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_start_time_tv"
                android:singleLine="true"
                android:text="结束时间"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_recharge_record_end_time_tv"
                android:layout_width="138dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_end_time_tip"
                android:background="@drawable/sogou_game_sdk_input_bg"
                android:clickable="true"
                android:gravity="center_horizontal|center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />

            <Button
                android:id="@+id/sogou_game_sdk_recharge_record_select_btn"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sogou_game_sdk_bt_red"
                android:text="查询"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sogou_game_sdk_time_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/sogou_game_sdk_recharge_record_time_portrait"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sogou_game_sdk_recharge_record_start_time_tip_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:singleLine="true"
                    android:text="开始时间"
                    android:textColor="@color/sogou_game_sdk_color_888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sogou_game_sdk_recharge_record_start_time_tv_portrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_start_time_tip_portrait"
                    android:layout_weight="1"
                    android:background="@drawable/sogou_game_sdk_input_bg"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:maxLines="2"
                    android:minHeight="25dp"
                    android:text=""
                    android:textColor="@color/sogou_game_sdk_color_111111"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sogou_game_sdk_recharge_record_end_time_tip_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_start_time_tv_portrait"
                    android:singleLine="true"
                    android:text="结束时间"
                    android:textColor="@color/sogou_game_sdk_color_888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sogou_game_sdk_recharge_record_end_time_tv_portrait"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/sogou_game_sdk_recharge_record_end_time_tip_portrait"
                    android:layout_weight="1"
                    android:background="@drawable/sogou_game_sdk_input_bg"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:maxLines="2"
                    android:minHeight="25dp"
                    android:text=""
                    android:textColor="@color/sogou_game_sdk_color_111111"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:id="@+id/sogou_game_sdk_recharge_record_select_btn_portrait"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_below="@id/sogou_game_sdk_recharge_record_time_portrait"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/sogou_game_sdk_bt_red"
                android:text="查询"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="13dp" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>