<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/activities_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/activities_item_button"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sogou_game_sdk_selector_button_green"
            android:text="@string/home_activities_detail"
            android:textColor="@color/sogou_game_sdk_color_ffffff"
            android:textSize="@dimen/btnTextSize" />

        <TextView
            android:id="@+id/activities_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/activities_item_button"
            android:layout_toRightOf="@id/activities_item_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="《诛仙》新服开测活动"
            android:textColor="@color/sogou_game_sdk_color_111111"
            android:textSize="@dimen/rechargeName" />

        <TextView
            android:id="@+id/activities_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/activities_item_button"
            android:layout_toRightOf="@id/activities_item_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="实物大奖等你!礼包多到你手软~"
            android:textColor="@color/sogou_game_sdk_color_888888"
            android:textSize="@dimen/btnTextSize" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sogou_game_sdk_color_dddddd" />

</LinearLayout>