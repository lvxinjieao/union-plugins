<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/sogou_game_sdk_tao_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/sogou_game_sdk_tao_game_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sogou_game_sdk_app_default_icon" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sogou_game_sdk_tao_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_tao_tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_tao_tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="11sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/sogou_game_sdk_tao_iv_more_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/sogou_game_sdk_personal_center_icon_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sogou_game_sdk_tao_code_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_tao_ll"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" />

</RelativeLayout>
