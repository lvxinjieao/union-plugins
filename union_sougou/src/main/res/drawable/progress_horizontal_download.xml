<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景  gradient是渐变,corners定义的是圆角 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.8dp" />
            <solid android:color="@color/sogou_game_sdk_color_ffdcb2" />
        </shape>
    </item>
    <!-- 第二条进度条颜色 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2.8dp" />

                <gradient
                    android:angle="90.0"
                    android:centerColor="@color/sogou_game_sdk_color_ff8a00"
                    android:centerY="0.45"
                    android:endColor="@color/sogou_game_sdk_color_ff8a00"
                    android:startColor="@color/sogou_game_sdk_color_ff8a00" />
            </shape>
        </clip>
    </item>
    <!-- 进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.8dp" />
                <solid android:color="@color/sogou_game_sdk_color_ff8a00" />
            </shape>
        </clip>
    </item>

</layer-list>